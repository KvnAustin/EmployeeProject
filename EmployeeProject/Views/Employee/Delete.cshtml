@using EmployeeProject.UI.ViewModels.Employee
@model DetailViewModel
@{ ViewData["Title"] = $"Employee - {@Model.Employee.FullName}"; }

<div class="row header-row">
    <div class="col">
        <h1>Are you sure you want to delete this employee?</h1>
        <a href="/">Go Back</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <form method="post" asp-controller="Employee" asp-controller="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Employee.Id" />

            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Employee.FirstName"></label>
                        <input class="form-control" asp-for="Employee.FirstName" readonly />
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Employee.LastName"></label>
                        <input class="form-control" asp-for="Employee.LastName" readonly />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Employee.JobTitle"></label>
                        <input class="form-control" asp-for="Employee.JobTitle" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Employee.HireDate"></label>
                        <input type="date" class="form-control" asp-for="Employee.HireDate" readonly />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>