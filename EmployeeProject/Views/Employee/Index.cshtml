@using EmployeeProject.UI.ViewModels.Employee
@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row header-row">
    <div class="col">
        <h1>Employees</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Job Title</th>
                    <th>Hire Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Employees?.Any() == true)
                {
                    foreach (var employee in Model.Employees)
                    {
                        <tr>
                            <td>@employee.FullName</td>
                            <td>@employee.JobTitle</td>
                            <td>@employee.HireDate?.ToShortDateString()</td>
                            <td class="text-center">
                                <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" class="text-success"><span class="bi bi-pencil"></span></a>
                                &nbsp;
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="text-danger"><span class="bi bi-trash"></span></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No employees exist.</td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-controller="Employee" asp-action="Create" class="btn btn-success">Create Employee</a>
    </div>
</div>
